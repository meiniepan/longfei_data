/**app.wxss**/

page {
  background: #81D8D0;
  --userToken: 'userToken';


  --themeColor: #1677FF;
  --tintBac: #F5F7FD;
  --tint0: #97A0C3;
  --commonBac: #ffffff;
  --white: #ffffff;
  --splitColor: #E3E6E9;
  --commonBlack: #222222;
  --commonRed2: #F95B49;
  --commonHint: #999999;
  --grayF6: #F6F6F6;
  --grayEE: #EEEEEE;
  --orange: #FF9040;
  --tiffany: #81D8D0;
  --accent: #E040FB;
  --themeBac: linear-gradient(to right,#445FF5,#6D0BBD);
  --titlePadding: 46rpx;
  --textHeight: 88rpx;
  --maxWidth: 500rpx;
  --maxTextWidth: 300rpx;

  font-size: 32rpx;
  word-break: break-all;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.out{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background: var(--tiffany);
  font-size: 32rpx;
  box-sizing: border-box;
}
.singleLine{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.singleLine-more{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.text{
  font-size: 30rpx;
  color: var(--commonBlack);
}
.bold{
  font-weight: bold;
}
.hint{
  font-size: 28rpx;
  color: var(--commonHint);
}
.hint2{
  font-size: 30rpx;
  color: var(--commonHint);
}
.horizontal{
  display: flex;
  flex-direction: row;
}
.vertical{
  display: flex;
  flex-direction: column;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;

}
.split{
  display: flex;
  width: 100%;
  height: 20rpx;
  background: var(--tintBac);
}
.split-line{
  width: 100%;
  height: 1rpx;
  background: var(--splitColor);
}
.textc{
  font-size: 28rpx;
}
.text-right{
  text-align: right;
}
.b {
  display: flex;
  flex-direction: row-reverse;
  height: 50rpx;
  padding: 30rpx;
  color: blue;
  margin-right: 50rpx;
}